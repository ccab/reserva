                    <thead>
                    <tr>
                        <th>Plato</th>
                        <th>Norma a servir</th>
                        <th>Precio</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for menuPlato in form.menuPlatos %}
                        <tr>
                            {% dump(menuPlato.vars) %}
                            <td>{{ form_widget(menuPlato.plato, {'attr':{'class':'select_plato'}}) }}</td>
                            <td>{{ menuPlato.vars.value.plato.norma ~ ' g' }}</td>
                            <td>{{ menuPlato.vars.value.plato.precio }}</td>
                        </tr>
                    {% else %}
                        <tr id="no_records">
                            <td colspan="3">No se han adicionado platos</td>
                        </tr>
