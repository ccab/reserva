{% block main %}

    {{ form_start(aprobar_form) }}

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Aprobar</th>
                <th>Tipo de Menu</th>
                <th>Alimento</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            {% for form in aprobar_form if form.vars.name != '_token' %}
                {% set entity = form.vars.value %}
                <tr>
                    <td>{{ form_widget(form.aprobado) }}</td>
                    <td>{{ entity.tipoMenu }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                {% for menu_plato in entity.menuPlatos %}
                    <tr>
                        <td></td>
                        <td></td>
                        <td>{{ menu_plato.plato.nombre }}</td>
                        <td>{{ menu_plato.plato.unidadMedida }}</td>
                        <td>{{ menu_plato.plato.precio }}</td>
                    </tr>
                {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5">No se encontraron resultados</td>
                    </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if aprobar_form.count > 1 %}
        <div id="form-actions-row">
            <button type="submit" class="btn">
                <i class="fa fa-save"></i> Guardar cambios
            </button>
{#            <a class="btn btn-secondary" href="{{ path('admin', { entity: 'Menu', action: 'list' }) }}">
                Volver al listado
            </a>#}
        </div>
    {% endif %}

    {{ form_end(aprobar_form) }}

{% endblock %}