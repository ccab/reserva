{% extends 'pdf_layout.html.twig' %}

{% block content_title %}{% endblock %}

{% block body %}

    {% for entity in entities %}
        <div class="row">
            <div class="col-lg-12">
                <h4>Comprobante de pago</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <b>Grupo Empresarial Labiofam</b>
            </div>
        </div><br>

        <div class="row">
            <div class="col-md-12 text-center">
                <div class="col-md-3">
                    {{ entity.usuario.noSolapin }}
                </div>
                <div class="col-md-3">
                    {{ entity.usuario.nombre ~ " " ~ entity.usuario.apellido ~ " " ~ entity.usuario.segundoApellido }}
                </div>
                <div class="col-md-3">
                    {{ entity.fecha|date('d/m/Y') }}
                </div>
            </div>
        </div>
        <br>

        {% for tipoMenu in entity.getTiposDeMenu %}

        <p><b>{{ tipoMenu }}</b></p><br>

        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Plato</th>
                <th>Norma</th>
                <th>Precio</th>
            </tr>
            </thead>
            <tbody>
            {% set total = 0 %}
            {% for plato in entity.getPlatosPorTipoMenu(tipoMenu) %}
            <tr>
                <td>{{ plato }}</td>
                <td>{{ plato.norma }}</td>
                <td>{{ plato.precio }}</td>
                {% set total = total + plato.precio %}
            </tr>
                {% endfor %}
            <tr>
                <td colspan="2"><b>Total</b></td>
                <td><b>{{ total }}</b></td>
            </tr>
            </tbody>
        </table>

        {% endfor %}

        <div class="row">
            <div class="col-lg-12 text-center">
                <p>------------------------------------------------------------------------------------------------------------</p>
            </div>
        </div>
    {% endfor %}


{% endblock %}

