{% extends 'easy_admin/layout.html.twig' %}

{% form_theme form 'form/bootstrap_3_layout.html.twig' %}

{% block body_class %} new new-password {% endblock %}

{% block page_title %} Cambiar clave{% endblock %}

{% block content_title %} Cambiar clave{% endblock %}

{% block main %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                {% if form.claveActual is defined %}
                    <div class="col-lg-4">
                        {{ form_row(form.claveActual) }}
                    </div>
                {% endif %}
                <div class="col-lg-4">
                    {{ form_row(form.claveNueva.clave) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.claveNueva.confirm) }}
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div id="form-actions-row">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success">Aceptar</button>
                    <a href="{{ path('admin', {'entity':'Usuario', 'action': 'list'}) }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </div>

    </div>

    {{ form_end(form) }}
{% endblock %}