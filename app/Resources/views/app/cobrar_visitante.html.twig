{% extends 'easy_admin/layout.html.twig' %}

{% form_theme form 'form/bootstrap_3_layout.html.twig' %}

{% block body_class %} new new-visitante {% endblock %}

{% block page_title %} Cobro de reservacion de visitante{% endblock %}

{% block content_title %} Cobro de reservacion de visitante{% endblock %}

{% block main %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    Fecha: {{ date('today')|date('d/m/Y') }}
                </div>
                <div class="col-lg-2 pull-right">
                    Valor a pagar: {{ importe }}
                </div>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="col-lg-4">
                    {{ form_row(form.nombre) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.apellido, {'label': 'Primer Apellido'}) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.segundoApellido) }}
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div id="form-actions-row">
                <div class="pull-right">
                    <button type="submit" class="btn btn-default">Generar comprobante</button>
                    <a href="{{ path('homepage') }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </div>

    </div>

    {{ form_end(form) }}
{% endblock %}