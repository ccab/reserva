{% extends 'easy_admin/layout.html.twig' %}

{% use '@EasyAdmin/form/bootstrap_3_layout.html.twig' %}
{% form_theme form _self %}

{% block body_class %} new new-plato {% endblock %}

{% block content_title %}Crear usuario{% endblock %}

{% block main %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            {{ form_errors(form) }}
            <br>
        </div>

        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.noSolapin) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.nombre) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.apellido) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.segundoApellido) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.usuario) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.roles) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.clave.clave) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-10">
                {{ form_row(form.clave.confirm) }}
            </div>
        </div>

        <div class="col-sm-10">
            <div id="form-actions-row">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Guardar Cambios
                </button>
                <a class="btn btn-secondary action-list"
                   href="{{ path('admin', { entity: 'Usuario', action: 'list' }) }}">
                    Volver al listado
                </a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{{ form(form) }}

{% endblock %}